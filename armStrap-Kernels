        runCommand("/usr/bin/dpkg --build debian/" + pkgname + "-" + version + " " + builtins.PkgDir + "/" + Kernel + "/", verbose = False)
        shutil.rmtree(builtins.WorkDir + "/debian")
        return(True)
    return(False)
  except SystemExit:
    pass
  except:
    logging.exception("Caught Exception")
    sys.exit(os.EX_SOFTWARE)

